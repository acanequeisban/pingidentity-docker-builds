ARG REGISTRY
ARG GIT_TAG
ARG ARCH

FROM ${REGISTRY}/pingdownloader:1.0-alpine-alnoj-${GIT_TAG}-${ARCH} as staging
ARG PRODUCT=pingauthorize
ARG VERSION
ARG DEVOPS_USER
ARG DEVOPS_KEY
ARG VERBOSE
ARG PING_IDENTITY_SNAPSHOT
ARG SNAPSHOT_NEXUS_URL

COPY tmp /tmp

ENV SNAPSHOT_NEXUS_URL=${SNAPSHOT_NEXUS_URL}
# copy your product zip file into the staging image
RUN /get-bits.sh --product ${PRODUCT} \
        --version ${VERSION} \
        --devops-user ${DEVOPS_USER} \
        --devops-key ${DEVOPS_KEY} \
        --devops-app "pipeline-build-${PRODUCT}-${VERSION}" \
        ${PING_IDENTITY_SNAPSHOT} \
        --verify-gpg-signature \
    && unzip -q /tmp/product.zip -d /tmp/ \
        -x *.bat \
        -x *.dll \
        -x *.exe \
        -x */start-ds \
        -x */stop-ds \
        -x */uninstall \
        -x */webapps/* \
        -x */resource/*.zip \
        -x */_script-util.sh \
        -x */lib/wrapper.jar \
    && find /tmp/PingAuthorize/docs -type f \
        ! -iname "unboundid.css" \
        ! -path "/tmp/PingAuthorize/docs/images/*" \
        ! -path "/tmp/PingAuthorize/docs/rest-api-specs/*" \
        -delete \
	&& mv /tmp/PingAuthorize /opt/server 

FROM scratch
# get the product staged above (single slender layer)
COPY --from=staging ["/opt/","/opt/"]
