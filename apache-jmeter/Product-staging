ARG REGISTRY
ARG GIT_TAG
ARG ARCH
FROM ${REGISTRY}/pingdownloader:1.0-alpine-alnoj-${GIT_TAG}-${ARCH} as staging
# place the software being delivered in a conspicuous, unix-correct location
ARG PRODUCT
ARG VERSION
ARG DEVOPS_USER
ARG DEVOPS_KEY
ARG VERBOSE

COPY ["keys.gpg","/tmp"]
RUN /get-bits.sh --product ${PRODUCT} \
        --version ${VERSION} \
        --devops-user ${DEVOPS_USER} \
        --devops-key ${DEVOPS_KEY} \
        --devops-app "pipeline-build-${PRODUCT}-${VERSION}" \
        --verify-gpg-signature \
	&& unzip -q /tmp/product.zip \
        -d /tmp \
        -x *.bat \
        -x *.dll \
        -x *.exe \
        -x *.ini \
        -x */printable_docs/* \
        -x */docs/* \
    && mv /tmp/${PRODUCT}-${VERSION} /opt/server

FROM scratch
COPY --from=staging ["/opt/","/opt/"]
